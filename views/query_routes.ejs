<script>
    $(function(){

        $.ajax({url:"/services/getAll/routes", success:function(results){

            spots = results;

            spot_show =  {"rows" : [

            ]

            };

            for( var spot_index in spots){
                spot = spots[spot_index];
                var val = [];
                for(var attr in spot){
                    val.push(spot[attr]);

                }
                var cell = {"cell" : val};
                spot_show.rows.push(cell);
            }

            jQuery(document).ready(function(){
                jQuery("#list2").jqGrid({

                    datastr: spot_show,
                    datatype: "jsonstring",
                    colNames:['id','出发战','到达站','到达标签','是否往返','距离','旅程分钟数','停留分钟数','路线介绍','原价','是否生效','创建时间','最近更新时间'],
                    colModel:[  {name:'route_id',index:'route_id',align:'right'},
                        {name:'departure_spot_id',index:'departure_spot_id', align:"right"},
                        {name:'arrival_spot_id',index:'arrival_spot_id', align:"right"},
                        {name:'to_label',index:'to_label', align:"right"},
                        {name:'is_round_trip',index:'is_round_trip', align:"right"},
                        {name:'distance',index:'distance', align:"right"},
                        {name:'travel_time_in_minutes',index:'travel_time_in_minutes', align:"right"},
                        {name:'duration_in_minutes',index:'duration_in_minutes', align:"right"},
                        {name:'route_description',index:'route_description', align:"right"},
                        {name:'base_price',index:'base_price', align:"right"},
                        {name:'is_active',index:'is_active', align:"right"},
                        {name:'creation_datetime',index:'creation_datetime', align:"right"},
                        {name:'last_updated_time',index:'last_updated_time', align:"right"}

                    ],
                    width: 770,
                    height: "100%"
                });
            });

        }})
    })
</script>





